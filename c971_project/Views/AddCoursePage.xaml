<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="c971_project.Views.AddCoursePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:system="clr-namespace:System;assembly=netstandard"
    Title="Add Course"
    BackgroundColor="{StaticResource Cream}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!--  Header  -->
            <Label
                Margin="0,20,0,0"
                HorizontalOptions="Center"
                Style="{StaticResource HeaderLabel}"
                Text="Add new Course" />

            <!--  Card container  -->
            <Border
                Padding="20"
                BackgroundColor="White"
                Stroke="{StaticResource Charcoal}"
                StrokeShape="RoundRectangle 12"
                StrokeThickness="1">

                <Border.Shadow>
                    <Shadow
                        Brush="{StaticResource DarkBlue}"
                        Opacity="0.15"
                        Radius="8"
                        Offset="0,4" />
                </Border.Shadow>

                <VerticalStackLayout>
                    <Label
                        Margin="0,20,0,10"
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Course Information"
                        TextColor="{StaticResource DarkBlue}" />

                    <!--  Course Name  -->
                    <VerticalStackLayout Spacing="1">
                        <Label
                            Style="{StaticResource FieldLabel}"
                            Text="Name *"
                            TextColor="{StaticResource DarkBlue}" />
                        <Border BackgroundColor="White" StrokeShape="RoundRectangle 8">
                            <Entry
                                BackgroundColor="Transparent"
                                Placeholder="Enter course name"
                                Text="{Binding NewCourse.Name, Mode=TwoWay}"
                                TextColor="{StaticResource DarkBlue}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Course Number  -->
                    <VerticalStackLayout Spacing="1">
                        <Label
                            Style="{StaticResource FieldLabel}"
                            Text="Number *"
                            TextColor="{StaticResource DarkBlue}" />
                        <Border BackgroundColor="White" StrokeShape="RoundRectangle 8">
                            <Entry
                                BackgroundColor="Transparent"
                                Placeholder="e.g., MATH101"
                                Text="{Binding NewCourse.CourseNum, Mode=TwoWay}"
                                TextColor="{StaticResource DarkBlue}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Credit Units  -->
                    <VerticalStackLayout Spacing="1">
                        <Label
                            Style="{StaticResource FieldLabel}"
                            Text="Credit Units *"
                            TextColor="{StaticResource DarkBlue}" />
                        <Border BackgroundColor="White" StrokeShape="RoundRectangle 8">
                            <Picker
                                Title="Select credit units"
                                ItemsSource="{Binding CreditUnitOptions}"
                                SelectedItem="{Binding NewCourse.CuNum, Mode=TwoWay}">
                                <Picker.ItemDisplayBinding>
                                    <Binding Path="." />
                                </Picker.ItemDisplayBinding>
                            </Picker>
                        </Border>
                    </VerticalStackLayout>

                    <!--  Start Date  -->
                    <VerticalStackLayout Spacing="1">
                        <Label
                            Style="{StaticResource FieldLabel}"
                            Text="Start Date *"
                            TextColor="{StaticResource DarkBlue}" />
                        <Border BackgroundColor="White" StrokeShape="RoundRectangle 8">
                            <DatePicker
                                BackgroundColor="Transparent"
                                Date="{Binding NewCourse.StartDate, Mode=TwoWay}"
                                MinimumDate="{x:Static system:DateTime.Today}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  End Date  -->
                    <VerticalStackLayout Spacing="1">
                        <Label
                            Style="{StaticResource FieldLabel}"
                            Text="End Date *"
                            TextColor="{StaticResource DarkBlue}" />
                        <Border BackgroundColor="White" StrokeShape="RoundRectangle 8">
                            <DatePicker
                                BackgroundColor="Transparent"
                                Date="{Binding NewCourse.EndDate, Mode=TwoWay}"
                                MinimumDate="{Binding NewCourse.StartDate}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  INSTRUCTOR INFORMATION SECTION  -->
                    <Label
                        Margin="0,40,0,10"
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Instructor Information"
                        TextColor="{StaticResource DarkBlue}" />

                    <!--  Instructor Name  -->
                    <VerticalStackLayout Spacing="1">
                        <Label
                            Style="{StaticResource FieldLabel}"
                            Text="Name *"
                            TextColor="{StaticResource DarkBlue}" />
                        <Border BackgroundColor="White" StrokeShape="RoundRectangle 8">
                            <Entry
                                BackgroundColor="Transparent"
                                Placeholder="Enter instructor name"
                                Text="{Binding NewInstructor.Name, Mode=TwoWay}"
                                TextColor="{StaticResource DarkBlue}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Instructor Email  -->
                    <VerticalStackLayout Spacing="1">
                        <Label
                            Style="{StaticResource FieldLabel}"
                            Text="Email *"
                            TextColor="{StaticResource DarkBlue}" />
                        <Border BackgroundColor="White" StrokeShape="RoundRectangle 8">
                            <Entry
                                BackgroundColor="Transparent"
                                Keyboard="Email"
                                Placeholder="instructor@school.edu"
                                Text="{Binding NewInstructor.Email, Mode=TwoWay}"
                                TextColor="{StaticResource DarkBlue}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Instructor Phone  -->
                    <VerticalStackLayout Spacing="1">
                        <Label
                            Style="{StaticResource FieldLabel}"
                            Text="Phone *"
                            TextColor="{StaticResource DarkBlue}" />
                        <Border BackgroundColor="White" StrokeShape="RoundRectangle 8">
                            <Entry
                                BackgroundColor="Transparent"
                                Keyboard="Telephone"
                                Placeholder="(555) 123-4567"
                                Text="{Binding NewInstructor.Phone, Mode=TwoWay}"
                                TextColor="{StaticResource DarkBlue}" />
                        </Border>
                    </VerticalStackLayout>



                    <!--  Save Button  -->
                    <Button
                        Command="{Binding SaveCourseCommand}"
                        HorizontalOptions="Center"
                        Text="Save Course" />

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>