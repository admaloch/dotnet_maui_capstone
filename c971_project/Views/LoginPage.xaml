<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="c971_project.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:system="clr-namespace:System;assembly=netstandard"
    Title="Login"
    BackgroundColor="{StaticResource Cream}">
    <Grid>
        <!--  Full screen loading overlay  -->
        <Grid
            BackgroundColor="#80000000"
            HorizontalOptions="Fill"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Fill"
            ZIndex="1000">

            <ActivityIndicator
                HeightRequest="60"
                HorizontalOptions="Center"
                IsRunning="True"
                VerticalOptions="Center"
                WidthRequest="60"
                Color="White" />
        </Grid>

        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">

                <!--  Header  -->
                <Border
                    Margin="0,10,0,0"
                    Padding="20,10"
                    BackgroundColor="{StaticResource DarkBlue}"
                    HorizontalOptions="Center"
                    Stroke="{StaticResource LightBrown}"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="2">

                    <Label
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeaderLabel}"
                        Text="WGU Cloud Planner"
                        TextColor="{StaticResource Cream}" />
                </Border>



                <!--  Card container  -->
                <Border
                    Margin="0,0,0,60"
                    Padding="20"
                    BackgroundColor="{StaticResource LightGray}"
                    Stroke="{StaticResource Charcoal}"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="3">

                    <Border.Shadow>
                        <Shadow
                            Brush="{StaticResource DarkBlue}"
                            Opacity="0.15"
                            Radius="8"
                            Offset="0,4" />
                    </Border.Shadow>

                    <VerticalStackLayout>
                        <Label
                            Margin="0,20,0,10"
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="Account login"
                            TextColor="{StaticResource DarkBlue}" />

                        <!--  Login Name  -->
                        <VerticalStackLayout Spacing="1">
                            <Entry
                                Keyboard="Email"
                                Placeholder="Email"
                                Text="{Binding Email}" />

                            <Entry
                                IsPassword="True"
                                Placeholder="Password"
                                Text="{Binding Password}" />
                            <Button
                                Margin="5,10,5,5"
                                BackgroundColor="{StaticResource DarkBlue}"
                                Command="{Binding LoginCommand}"
                                IsEnabled="{Binding IsNotBusy}"
                                Text="Login" />

                            <Button
                                Margin="5"
                                BackgroundColor="{StaticResource DarkBlue}"
                                Command="{Binding RegisterPageCommand}"
                                ContentLayout="right"
                                ImageSource="more_icon2.svg"
                                IsEnabled="{Binding IsNotBusy}"
                                Text="Create Account"
                                TextColor="{StaticResource Primary}" />

                        </VerticalStackLayout>


                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>



    </Grid>
</ContentPage>