<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="c971_project.Views.CoursePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Course Information"
    BackgroundColor="{StaticResource Cream}">

    <Grid>
        <!--  Main scrollable content  -->
        <ScrollView>

            <VerticalStackLayout Padding="20">

                <!--  Header  -->
                <Border
                    Margin="0,10,0,0"
                    Padding="20,10"
                    BackgroundColor="{StaticResource DarkBlue}"
                    HorizontalOptions="Center"
                    Stroke="{StaticResource LightBrown}"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="2">

                    <Label
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeaderLabel}"
                        Text="{Binding Course.Name}"
                        TextColor="{StaticResource Cream}" />
                </Border>
                <HorizontalStackLayout
                    Grid.Row="0"
                    Margin="0"
                    Padding="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Start">

                    <!--  Delete Icon at Top Right of Page  -->
                    <Border
                        Grid.Row="0"
                        Margin="3,7,5,7"
                        BackgroundColor="{StaticResource Charcoal}"
                        HeightRequest="55"
                        HorizontalOptions="Center"
                        StrokeShape="Ellipse"
                        VerticalOptions="Start"
                        WidthRequest="55"
                        ZIndex="999">

                        <Border.Shadow>
                            <Shadow
                                Brush="#40000000"
                                Opacity="0.24"
                                Radius="8"
                                Offset="0,4" />
                        </Border.Shadow>

                        <Image
                            HeightRequest="30"
                            HorizontalOptions="Center"
                            Source="trash2_icon.svg"
                            VerticalOptions="Center"
                            WidthRequest="30">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding DeleteCourseCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Border>
                </HorizontalStackLayout>

                <!--  Course Info Card  -->
                <Border
                    Padding="15"
                    BackgroundColor="{StaticResource White}"
                    Stroke="{StaticResource Charcoal}"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="3">

                    <Border.Shadow>
                        <Shadow
                            Brush="{StaticResource MediumGray}"
                            Opacity="0.3"
                            Radius="8"
                            Offset="2,2" />
                    </Border.Shadow>

                    <!--  Use AbsoluteLayout to position content + floating icon  -->
                    <AbsoluteLayout>

                        <!--  Main content - REMOVE AbsoluteLayout properties  -->
                        <VerticalStackLayout Spacing="12">
                            <!--  course number  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Course number:"
                                    TextColor="{StaticResource MediumGray}" />
                                <Label Text="{Binding Course.CourseNum}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  course units  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Course units:"
                                    TextColor="{StaticResource MediumGray}" />
                                <Label Text="{Binding Course.CuNum}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  start date  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Start date:"
                                    TextColor="{StaticResource MediumGray}" />
                                <Label Text="{Binding Course.StartDate, StringFormat='{0:MM/dd/yyyy}'}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  end date  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="End date:"
                                    TextColor="{StaticResource MediumGray}" />
                                <Label Text="{Binding Course.EndDate, StringFormat='{0:MM/dd/yyyy}'}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  instructor name  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Instructor:"
                                    TextColor="{StaticResource MediumGray}" />
                                <Label Text="{Binding Instructor.Name}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  Instructor Email  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Email:"
                                    TextColor="{StaticResource MediumGray}" />
                                <Label
                                    Text="{Binding Instructor.Email}"
                                    TextColor="{StaticResource DarkBlue}"
                                    WidthRequest="230" />
                            </HorizontalStackLayout>

                            <!--  Instructor Phone  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Phone:"
                                    TextColor="{StaticResource MediumGray}" />
                                <Label Text="{Binding Instructor.Phone}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>



                        </VerticalStackLayout>
                        <!--  Floating Edit Icon in bottom right corner  -->
                        <Border
                            Margin="5,5,5,5"
                            AbsoluteLayout.LayoutBounds="1,0,50,45"
                            AbsoluteLayout.LayoutFlags="PositionProportional"
                            BackgroundColor="{StaticResource MediumGray}"
                            HeightRequest="45"
                            StrokeShape="Ellipse"
                            WidthRequest="45">

                            <Border.Shadow>
                                <!--  More realistic shadow  -->
                                <Shadow
                                    Brush="#40000000"
                                    Opacity="0.24"
                                    Radius="8"
                                    Offset="0,4" />
                            </Border.Shadow>

                            <Image
                                HeightRequest="25"
                                HorizontalOptions="Center"
                                Source="edit_icon.svg"
                                VerticalOptions="Center"
                                WidthRequest="25">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding EditCourseCommand}" />
                                </Image.GestureRecognizers>
                            </Image>
                        </Border>

                    </AbsoluteLayout>
                </Border>

                <!--  Assessments Section Header  -->
                <!--  Header  -->
                <Border
                    Margin="20"
                    Padding="20,10"
                    BackgroundColor="{StaticResource DarkBlue}"
                    HorizontalOptions="Center"
                    Stroke="{StaticResource LightBrown}"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="2">

                    <Label
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeaderLabel}"
                        Text="Assessments"
                        TextColor="{StaticResource Cream}" />
                </Border>


                <CollectionView
                    ItemsSource="{Binding Assessments}"
                    MaximumHeightRequest="450"
                    MinimumHeightRequest="130">


                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,5"
                                Padding="15"
                                BackgroundColor="{StaticResource White}"
                                Stroke="{StaticResource Charcoal+}"
                                StrokeShape="RoundRectangle 10"
                                StrokeThickness="3">


                                <Grid>
                                    <!--  Content  -->
                                    <VerticalStackLayout Spacing="8">
                                        <!--  Assessment Name  -->
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            HorizontalOptions="Start"
                                            Text="{Binding Name}"
                                            TextColor="{StaticResource DarkBlue}"
                                            WidthRequest="200" />


                                        <!--  Last updated  -->
                                        <HorizontalStackLayout Spacing="5">
                                            <Label
                                                FontAttributes="Bold"
                                                Text="Type:"
                                                TextColor="{StaticResource MediumGray}" />
                                            <Label Text="{Binding Type}" TextColor="{StaticResource DarkBlue}" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>

                                    <!--  Icons container  -->
                                    <HorizontalStackLayout
                                        HorizontalOptions="End"
                                        Spacing="10"
                                        VerticalOptions="Center">



                                        <!--  More / navigate icon  -->
                                        <Image
                                            HeightRequest="40"
                                            Source="more_icon.svg"
                                            WidthRequest="40">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.AssessmentPageCommand}" CommandParameter="{Binding .}" />
                                            </Image.GestureRecognizers>
                                        </Image>

                                    </HorizontalStackLayout>

                                </Grid>

                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Border
                            Padding="30,20"
                            BackgroundColor="{StaticResource White}"
                            HeightRequest="130"
                            HorizontalOptions="Fill"
                            Stroke="{StaticResource Charcoal}"
                            StrokeShape="RoundRectangle 15"
                            StrokeThickness="3"
                            VerticalOptions="Center">

                            <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                                <Image
                                    HeightRequest="24"
                                    HorizontalOptions="Center"
                                    Source="search_icon.svg"
                                    WidthRequest="24" />

                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="No Assessments Yet"
                                    TextColor="{StaticResource DarkBlue}" />

                                <Label
                                    FontSize="14"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Add your first assessment to get started!"
                                    TextColor="{StaticResource Charcoal}" />
                            </VerticalStackLayout>
                        </Border>
                    </CollectionView.EmptyView>
                </CollectionView>

                <!--  Floating Add Assessment Button with Label  -->
                <HorizontalStackLayout
                    Padding="16"
                    HorizontalOptions="End"
                    InputTransparent="False"
                    Spacing="12"
                    VerticalOptions="End">

                    <!--  Label  -->
                    <Label
                        FontAttributes="Bold"
                        FontSize="22"
                        Text="Add Assessment"
                        TextColor="{StaticResource DarkBlue}"
                        VerticalOptions="Center" />

                    <!--  Circular Button  -->
                    <Border
                        BackgroundColor="{StaticResource Charcoal}"
                        HeightRequest="56"
                        StrokeShape="Ellipse"
                        WidthRequest="56">
                        <Border.Shadow>
                            <Shadow
                                Brush="{StaticResource DarkBlue}"
                                Opacity="0.5"
                                Radius="8"
                                Offset="2,2" />
                        </Border.Shadow>

                        <Image
                            HeightRequest="35"
                            HorizontalOptions="Center"
                            Source="add_icon.svg"
                            VerticalOptions="Center"
                            WidthRequest="35">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding AddAssessmentCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Border>
                </HorizontalStackLayout>

                <!--  Notes Section Header  -->
                <!--  Header  -->
                <Border
                    Margin="20,0,20,20"
                    Padding="20,10"
                    BackgroundColor="{StaticResource DarkBlue}"
                    HorizontalOptions="Center"
                    Stroke="{StaticResource LightBrown}"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="2">

                    <Label
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeaderLabel}"
                        Text="Notes"
                        TextColor="{StaticResource Cream}" />
                </Border>


                <CollectionView
                    ItemsSource="{Binding Notes}"
                    MaximumHeightRequest="450"
                    MinimumHeightRequest="130">


                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,5"
                                Padding="15"
                                BackgroundColor="{StaticResource White}"
                                Stroke="{StaticResource Charcoal+}"
                                StrokeShape="RoundRectangle 10"
                                StrokeThickness="3">


                                <Grid>
                                    <!--  Content  -->
                                    <VerticalStackLayout Spacing="8">
                                        <!--  Note Name  -->
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            HorizontalOptions="Start"
                                            Text="{Binding Title}"
                                            TextColor="{StaticResource DarkBlue}"
                                            WidthRequest="200" />


                                        <!--  Last updated  -->
                                        <HorizontalStackLayout Spacing="5">
                                            <Label
                                                FontAttributes="Bold"
                                                Text="Last updated:"
                                                TextColor="{StaticResource MediumGray}" />
                                            <Label Text="{Binding LastUpdated, StringFormat='{0:MM/dd/yyyy}'}" TextColor="{StaticResource DarkBlue}" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>

                                    <!--  Icons container  -->
                                    <HorizontalStackLayout
                                        HorizontalOptions="End"
                                        Spacing="10"
                                        VerticalOptions="Center">



                                        <!--  More / navigate icon  -->
                                        <Image
                                            HeightRequest="40"
                                            Source="more_icon.svg"
                                            WidthRequest="40">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NotePageCommand}" CommandParameter="{Binding .}" />
                                            </Image.GestureRecognizers>
                                        </Image>

                                    </HorizontalStackLayout>

                                </Grid>

                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Border
                            Padding="30,20"
                            BackgroundColor="{StaticResource White}"
                            HeightRequest="130"
                            HorizontalOptions="Fill"
                            Stroke="{StaticResource Charcoal}"
                            StrokeShape="RoundRectangle 15"
                            StrokeThickness="3"
                            VerticalOptions="Center">

                            <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                                <Image
                                    HeightRequest="24"
                                    HorizontalOptions="Center"
                                    Source="search_icon.svg"
                                    WidthRequest="24" />

                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="No Notes Yet"
                                    TextColor="{StaticResource DarkBlue}" />

                                <Label
                                    FontSize="14"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Add your first note to get started!"
                                    TextColor="{StaticResource Charcoal}" />
                            </VerticalStackLayout>
                        </Border>
                    </CollectionView.EmptyView>
                </CollectionView>

                <!--  Floating Add note Button with Label  -->
                <HorizontalStackLayout
                    Padding="16"
                    HorizontalOptions="End"
                    InputTransparent="False"
                    Spacing="12"
                    VerticalOptions="End">

                    <!--  Label  -->
                    <Label
                        FontAttributes="Bold"
                        FontSize="22"
                        Text="Add Note"
                        TextColor="{StaticResource DarkBlue}"
                        VerticalOptions="Center" />

                    <!--  Circular Button  -->
                    <Border
                        BackgroundColor="{StaticResource Charcoal}"
                        HeightRequest="56"
                        StrokeShape="Ellipse"
                        WidthRequest="56">
                        <Border.Shadow>
                            <Shadow
                                Brush="{StaticResource DarkBlue}"
                                Opacity="0.5"
                                Radius="8"
                                Offset="2,2" />
                        </Border.Shadow>

                        <Image
                            HeightRequest="35"
                            HorizontalOptions="Center"
                            Source="add_icon.svg"
                            VerticalOptions="Center"
                            WidthRequest="35">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding AddNoteCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Border>
                </HorizontalStackLayout>


            </VerticalStackLayout>
        </ScrollView>



    </Grid>

</ContentPage>

