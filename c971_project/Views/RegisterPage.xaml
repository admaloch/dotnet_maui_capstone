<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="c971_project.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:system="clr-namespace:System;assembly=netstandard"
    Title="Register"
    BackgroundColor="{StaticResource Cream}">
    <Grid>
        <!--  Full screen loading overlay  -->
        <Grid
    BackgroundColor="#B3000000"
    HorizontalOptions="Fill"
    IsVisible="{Binding IsBusy}"
    VerticalOptions="Fill"
    ZIndex="1000">

            <Border
        Padding="20"
        BackgroundColor="{StaticResource DarkBlue}"
        HorizontalOptions="Center"
        Stroke="White"
        StrokeThickness="2"
        StrokeShape="RoundRectangle 100"
        VerticalOptions="Center">

                <Grid>
                    <!--  SVG Background  -->
                    <Image
                Aspect="AspectFit"
                HeightRequest="80"
                HorizontalOptions="Center"
                Opacity="0.3"
                Source="owl_icon.png"
                VerticalOptions="Center"
                WidthRequest="80" />

                    <!--  Spinner on top  -->
                    <ActivityIndicator
                HeightRequest="100"
                HorizontalOptions="Center"
                IsRunning="True"
                VerticalOptions="Center"
                WidthRequest="100"
                Color="White" />
                </Grid>

            </Border>
        </Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">
                <!--  Header  -->
                <Border
                    Margin="0,10,0,0"
                    Padding="20,10"
                    BackgroundColor="{StaticResource DarkBlue}"
                    HorizontalOptions="Center"
                    Stroke="{StaticResource LightBrown}"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="2">

                    <Label
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeaderLabel}"
                        Text="Register Account"
                        TextColor="{StaticResource Cream}" />
                </Border>



                <!--  Card container  -->
                <Border
                    Margin="0,0,0,60"
                    Padding="20"
                    BackgroundColor="{StaticResource LightGray}"
                    Stroke="{StaticResource Charcoal}"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="3">

                    <Border.Shadow>
                        <Shadow
                            Brush="{StaticResource DarkBlue}"
                            Opacity="0.15"
                            Radius="8"
                            Offset="0,4" />
                    </Border.Shadow>

                    <VerticalStackLayout>
                        <Label
                            Margin="0,20,0,10"
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="Account Register"
                            TextColor="{StaticResource DarkBlue}" />

                        <!--  Register Name  -->
                        <VerticalStackLayout Spacing="1">
                            <Entry
                                Keyboard="Email"
                                Placeholder="Email"
                                Text="{Binding Email}" />

                            <Entry
                                IsPassword="True"
                                Placeholder="Password"
                                Text="{Binding Password}" />

                            <Entry
                                IsPassword="True"
                                Placeholder="Confirm Password"
                                Text="{Binding ConfirmPassword}" />

                            <!--  Student Information  -->
                            <Label
                                Margin="0,10,0,0"
                                FontAttributes="Bold"
                                Text="Student Information" />

                            <Entry Placeholder="WGU Student ID" Text="{Binding StudentIdNumber}" />

                            <Entry Placeholder="Full Name" Text="{Binding FullName}" />

                            <Label
                                Style="{StaticResource FieldLabel}"
                                Text="Select major"
                                TextColor="{StaticResource DarkBlue}" />
                            <Picker
                                Title="Select Your Major"
                                BackgroundColor="{StaticResource White}"
                                ItemsSource="{Binding MajorDisplayNames}"
                                SelectedItem="{Binding SelectedMajorDisplayName}"
                                TextColor="{StaticResource DarkBlue}" />
                            <Button
                                Margin="5,20,5,5"
                                BackgroundColor="{StaticResource DarkBlue}"
                                Command="{Binding RegisterCommand}"
                                IsEnabled="{Binding IsNotBusy}"
                                Text="Register new account" />

                            <Button
                                Margin="5"
                                BackgroundColor="{StaticResource DarkBlue}"
                                Command="{Binding LoginPageCommand}"
                                ContentLayout="right"
                                ImageSource="more_icon2.svg"
                                IsEnabled="{Binding IsNotBusy}"
                                Text="Login to existing account"
                                TextColor="{StaticResource Primary}" />

                        </VerticalStackLayout>


                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>


    </Grid>
</ContentPage>