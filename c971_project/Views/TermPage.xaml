<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="c971_project.Views.TermPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Term Information"
    BackgroundColor="{StaticResource Cream}">

    <Grid>
        <!--  Main scrollable content  -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <!--  Header  -->
                <Label
                    Margin="20,0"
                    HorizontalOptions="Center"
                    Style="{StaticResource HeaderLabel}"
                    Text="{Binding Term.Name}" />

                <!--  Term Info Card  -->
                <Border
                    Padding="15"
                    BackgroundColor="{StaticResource White}"
                    Stroke="{StaticResource Charcoal}"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="3">

                    <Border.Shadow>
                        <Shadow
                            Brush="{StaticResource MediumGray}"
                            Opacity="0.3"
                            Radius="8"
                            Offset="2,2" />
                    </Border.Shadow>

                    <!--  Use AbsoluteLayout to position content + floating icon  -->
                    <AbsoluteLayout>

                        <!--  Main content - REMOVE AbsoluteLayout properties  -->
                        <VerticalStackLayout Spacing="12">

                            <!--  start date  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Start date:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="78" />
                                <Label Text="{Binding Term.StartDate, StringFormat='{0:d}'}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  end date  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="End date:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="78" />
                                <Label Text="{Binding Term.EndDate, StringFormat='{0:d}'}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                        </VerticalStackLayout>
                        <!--  Floating Edit Icon in bottom right corner  -->
                        <Border
                            AbsoluteLayout.LayoutBounds="1,0,50,50"
                            AbsoluteLayout.LayoutFlags="PositionProportional"
                            BackgroundColor="{StaticResource MediumGray}"
                            HeightRequest="45"
                            StrokeShape="Ellipse"
                            WidthRequest="45">

                            <Border.Shadow>
                                <!--  More realistic shadow  -->
                                <Shadow
                                    Brush="#40000000"
                                    Opacity="0.24"
                                    Radius="8"
                                    Offset="0,4" />
                            </Border.Shadow>

                            <Image
                                HeightRequest="25"
                                HorizontalOptions="Center"
                                Source="edit_icon.svg"
                                VerticalOptions="Center"
                                WidthRequest="25">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding EditTermCommand}" />
                                </Image.GestureRecognizers>
                            </Image>
                        </Border>

                    </AbsoluteLayout>
                </Border>

                <!--  Courses Section Header  -->
                <Label
                    Margin="0,20,0,10"
                    Style="{StaticResource HeaderLabel}"
                    Text="Courses" />

                <CollectionView MinimumHeightRequest="200"  ItemsSource="{Binding Courses}">
                    <CollectionView.ItemTemplate >
                        <DataTemplate>
                            <Border
                                HeightRequest="70"
                                Margin="0,5"
                                Padding="10,8"
                                BackgroundColor="{StaticResource White}"
                                Stroke="{StaticResource Charcoal}"
                                StrokeShape="RoundRectangle 10"
                                StrokeThickness="3">
                                <Grid>
                                    <!--  Content  -->
                                    <VerticalStackLayout VerticalOptions="Center">
                                        <Label
                                            FontAttributes="Bold"
                                            HorizontalOptions="Start"
                                            Text="{Binding Name}"
                                            TextColor="{StaticResource DarkBlue}" />
                                    </VerticalStackLayout>
                                    <!--  Icons container  -->
                                    <HorizontalStackLayout
                                        HorizontalOptions="End"
                                        Spacing="0"
                                        VerticalOptions="Center">
                                        <!--  Delete icon  -->
                                        <Image
                                            Margin="0,0,10,0"
                                            HeightRequest="40"
                                            Source="trash_icon.svg"
                                            WidthRequest="40">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCourseCommand}" CommandParameter="{Binding .}" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                        <!--  More / navigate icon  -->
                                        <Image
                                            HeightRequest="35"
                                            Source="more_icon.svg"
                                            WidthRequest="35">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CoursePageCommand}" CommandParameter="{Binding .}" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <Border
                            Padding="30"
                            HeightRequest="200"
                            BackgroundColor="{StaticResource White}"
                            HorizontalOptions="Fill"
                            Stroke="{StaticResource Charcoal}"
                            StrokeShape="RoundRectangle 15"
                            StrokeThickness="3"
                            VerticalOptions="Center">

                            <VerticalStackLayout HorizontalOptions="Center" Spacing="15">
                                <Image
                                    HeightRequest="44"
                                    HorizontalOptions="Center"
                                    Source="search_icon.svg"
                                    WidthRequest="44" />

                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="No Courses Yet"
                                    TextColor="{StaticResource DarkBlue}" />

                                <Label
                                    FontSize="14"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Add your first course to get started!"
                                    TextColor="{StaticResource Charcoal}" />
                            </VerticalStackLayout>
                        </Border>
                    </CollectionView.EmptyView>
                </CollectionView>


            </VerticalStackLayout>
        </ScrollView>

        <!--  Floating Add Term Button with Label  -->
        <HorizontalStackLayout
            Padding="16"
            HorizontalOptions="End"
            InputTransparent="False"
            Spacing="12"
            VerticalOptions="End">

            <!--  Label  -->
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="Add Course"
                TextColor="{StaticResource DarkBlue}"
                VerticalOptions="Center" />

            <!--  Circular Button  -->
            <Border
                BackgroundColor="{StaticResource DarkBlue}"
                HeightRequest="56"
                StrokeShape="Ellipse"
                WidthRequest="56">
                <Border.Shadow>
                    <Shadow
                        Brush="{StaticResource DarkBlue}"
                        Opacity="0.5"
                        Radius="8"
                        Offset="2,2" />
                </Border.Shadow>

                <Image
                    HeightRequest="35"
                    HorizontalOptions="Center"
                    Source="add_icon.svg"
                    VerticalOptions="Center"
                    WidthRequest="35">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AddCourseCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </Border>
        </HorizontalStackLayout>

    </Grid>
</ContentPage>