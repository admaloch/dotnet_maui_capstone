<ContentPage
    x:Class="c971_project.Views.SearchPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:c971_project.Helpers"
xmlns:models="clr-namespace:c971_project.Core.Models;assembly=c971_project.Core"
    xmlns:viewmodels="clr-namespace:c971_project.ViewModels"
    Title="Search"
    BackgroundColor="{StaticResource Cream}">


    <ContentPage.Resources>
        <helpers:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        <helpers:InverseBoolConverter x:Key="InverseBoolConverter" />
    </ContentPage.Resources>

    <Grid>

        <!--  Full screen loading overlay  -->
        <Grid
            BackgroundColor="#B3000000"
            HorizontalOptions="Fill"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Fill"
            ZIndex="1000">

            <Border
                Padding="20"
                BackgroundColor="{StaticResource DarkBlue}"
                HorizontalOptions="Center"
                Stroke="White"
                StrokeShape="RoundRectangle 100"
                StrokeThickness="2"
                VerticalOptions="Center">

                <Grid>
                    <!--  SVG Background  -->
                    <Image
                        Aspect="AspectFit"
                        HeightRequest="80"
                        HorizontalOptions="Center"
                        Opacity="0.3"
                        Source="owl_icon.png"
                        VerticalOptions="Center"
                        WidthRequest="80" />

                    <!--  Spinner on top  -->
                    <ActivityIndicator
                        HeightRequest="100"
                        HorizontalOptions="Center"
                        IsRunning="True"
                        VerticalOptions="Center"
                        WidthRequest="100"
                        Color="White" />
                </Grid>

            </Border>
        </Grid>

        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <!--  Header  -->
                <Border
                    Margin="0,10,0,0"
                    Padding="20,10"
                    BackgroundColor="{StaticResource DarkBlue}"
                    HorizontalOptions="Center"
                    Stroke="{StaticResource LightBrown}"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="1">

                    <Label
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeaderLabel}"
                        Text="Global Search"
                        TextColor="{StaticResource Cream}" />
                </Border>

                <!--  Search Box  -->
                <Border
                    Padding="20"
                    BackgroundColor="{StaticResource White}"
                    Stroke="{StaticResource Charcoal}"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="3">

                    <Border.Shadow>
                        <Shadow
                            Brush="{StaticResource MediumGray}"
                            Opacity="0.3"
                            Radius="8"
                            Offset="2,2" />
                    </Border.Shadow>

                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <Entry
                            Grid.Column="0"
                            Placeholder="Search courses, terms, assessments..."
                            ReturnCommand="{Binding SearchCommand}"
                            Text="{Binding SearchQuery}" />
                        <Button
                            Grid.Column="1"
                            BackgroundColor="{StaticResource Charcoal}"
                            Command="{Binding SearchCommand}"
                            Text="Search"
                            TextColor="White" />
                    </Grid>
                </Border>

                <!--  Clear Search  -->
                <Button
                    BackgroundColor="{StaticResource Charcoal}"
                    Command="{Binding ClearSearchCommand}"
                    HorizontalOptions="Center"
                    IsVisible="{Binding HasSearched}"
                    Text="Clear Search" />


                <!--  No Results Message  -->
                <Label
                    FontAttributes="Italic"
                    FontSize="22"
                    HorizontalOptions="Center"
                    IsVisible="{Binding HasSearched, Converter={StaticResource InverseBoolConverter}}"
                    Text="Currently no results. Try a search term."
                    TextColor="{StaticResource DarkBlue}" />




                <!--  Search Results  -->
                <VerticalStackLayout IsVisible="{Binding SearchResults.HasResults}" Spacing="10">

                    <!--  Terms Results  -->
                    <VerticalStackLayout IsVisible="{Binding SearchResults.Terms.Count, Converter={StaticResource CountToVisibilityConverter}}">
                        <Label
                            FontAttributes="Bold"
                            FontSize="22"
                            Text="Terms" />

                        <CollectionView ItemsSource="{Binding SearchResults.Terms}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Term">
                                    <Border
                                        Margin="2,1"
                                        Padding="15,5"
                                        BackgroundColor="{StaticResource LightBlue}"
                                        HorizontalOptions="Fill"
                                        Stroke="{StaticResource DarkBlue}"
                                        StrokeShape="RoundRectangle 5"
                                        StrokeThickness="1"
                                        VerticalOptions="Center">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <VerticalStackLayout
                                                Grid.Column="0"
                                                Spacing="0"
                                                VerticalOptions="Center">
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    Text="{Binding Name}"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    FontSize="16"
                                                    Text="{Binding StartDate, StringFormat='{0:MMM dd, yyyy} - {1:MMM dd, yyyy}'}"
                                                    TextColor="{StaticResource Gray600}"
                                                    VerticalOptions="Center" />
                                            </VerticalStackLayout>
                                            <Image
                                                Grid.Column="1"
                                                HeightRequest="33"
                                                HorizontalOptions="End"
                                                Source="more_icon.svg"
                                                VerticalOptions="Center"
                                                WidthRequest="33" />
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SearchViewModel}}, Path=NavigateToResultCommand}" CommandParameter="{Binding .}" />
                                            </Grid.GestureRecognizers>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                    <!--  Courses Results  -->
                    <VerticalStackLayout IsVisible="{Binding SearchResults.Courses.Count, Converter={StaticResource CountToVisibilityConverter}}">


                        <Label
                            FontAttributes="Bold"
                            FontSize="22"
                            Text="Courses" />

                        <CollectionView ItemsSource="{Binding SearchResults.Courses}">

                            <CollectionView.ItemTemplate>

                                <DataTemplate x:DataType="models:Course">
                                    <Border
                                        Margin="2,1"
                                        Padding="15,5"
                                        BackgroundColor="{StaticResource LightGreen}"
                                        HorizontalOptions="Fill"
                                        Stroke="{StaticResource DarkGreen}"
                                        StrokeShape="RoundRectangle 5"
                                        StrokeThickness="1"
                                        VerticalOptions="Center">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <VerticalStackLayout
                                                Grid.Column="0"
                                                Spacing="0"
                                                VerticalOptions="Center">
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    Text="{Binding Name}"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    FontSize="16"
                                                    Text="{Binding CourseNum}"
                                                    TextColor="{StaticResource Gray600}"
                                                    VerticalOptions="Center" />
                                            </VerticalStackLayout>
                                            <Image
                                                Grid.Column="1"
                                                HeightRequest="33"
                                                HorizontalOptions="End"
                                                Source="more_icon.svg"
                                                VerticalOptions="Center"
                                                WidthRequest="33" />
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SearchViewModel}}, Path=NavigateToResultCommand}" CommandParameter="{Binding .}" />
                                            </Grid.GestureRecognizers>
                                        </Grid>
                                    </Border>
                                </DataTemplate>

                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!--  Assessments Results  -->
                    <VerticalStackLayout IsVisible="{Binding SearchResults.Assessments.Count, Converter={StaticResource CountToVisibilityConverter}}">
                        <Label
                            FontAttributes="Bold"
                            FontSize="22"
                            Text="Assessments" />
                        <CollectionView ItemsSource="{Binding SearchResults.Assessments}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Assessment">
                                    <Border
                                        Margin="2,1"
                                        Padding="15,5"
                                        BackgroundColor="{StaticResource LightOrange}"
                                        HorizontalOptions="Fill"
                                        Stroke="{StaticResource DarkOrange}"
                                        StrokeShape="RoundRectangle 5"
                                        StrokeThickness="1"
                                        VerticalOptions="Center">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <VerticalStackLayout
                                                Grid.Column="0"
                                                Spacing="0"
                                                VerticalOptions="Center">
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    Text="{Binding Name}"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    FontSize="16"
                                                    Text="{Binding Type}"
                                                    TextColor="{StaticResource Gray600}"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    FontSize="16"
                                                    Text="{Binding StartDate, StringFormat='Due: {0:MMM dd, yyyy}'}"
                                                    TextColor="{StaticResource Gray600}"
                                                    VerticalOptions="Center" />
                                            </VerticalStackLayout>
                                            <Image
                                                Grid.Column="1"
                                                HeightRequest="33"
                                                HorizontalOptions="End"
                                                Source="more_icon.svg"
                                                VerticalOptions="Center"
                                                WidthRequest="33" />
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SearchViewModel}}, Path=NavigateToResultCommand}" CommandParameter="{Binding .}" />
                                            </Grid.GestureRecognizers>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!--  Notes Results  -->
                    <VerticalStackLayout IsVisible="{Binding SearchResults.Notes.Count, Converter={StaticResource CountToVisibilityConverter}}">
                        <Label
                            FontAttributes="Bold"
                            FontSize="22"
                            Text="Notes" />
                        <CollectionView ItemsSource="{Binding SearchResults.Notes}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Note">
                                    <Border
                                        Margin="2,1"
                                        Padding="15,5"
                                        BackgroundColor="{StaticResource LightPurple}"
                                        HorizontalOptions="Fill"
                                        Stroke="{StaticResource DarkPurple}"
                                        StrokeShape="RoundRectangle 5"
                                        StrokeThickness="1"
                                        VerticalOptions="Center">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <VerticalStackLayout
                                                Grid.Column="0"
                                                Spacing="0"
                                                VerticalOptions="Center">
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    Text="{Binding Title}"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    FontSize="16"
                                                    LineBreakMode="TailTruncation"
                                                    MaxLines="2"
                                                    Text="{Binding Body}"
                                                    TextColor="{StaticResource Gray600}"
                                                    VerticalOptions="Center" />
                                            </VerticalStackLayout>
                                            <Image
                                                Grid.Column="1"
                                                HeightRequest="33"
                                                HorizontalOptions="End"
                                                Source="more_icon.svg"
                                                VerticalOptions="Center"
                                                WidthRequest="33" />
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SearchViewModel}}, Path=NavigateToResultCommand}" CommandParameter="{Binding .}" />
                                            </Grid.GestureRecognizers>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!--  Instructors Results  -->
                    <VerticalStackLayout IsVisible="{Binding SearchResults.Instructors.Count, Converter={StaticResource CountToVisibilityConverter}}">
                        <Label
                            FontAttributes="Bold"
                            FontSize="22"
                            Text="Instructors" />
                        <CollectionView ItemsSource="{Binding SearchResults.Instructors}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Instructor">
                                    <Border
                                        Margin="2,1"
                                        Padding="15,5"
                                        BackgroundColor="{StaticResource LightRed}"
                                        HorizontalOptions="Fill"
                                        Stroke="{StaticResource DarkRed}"
                                        StrokeShape="RoundRectangle 5"
                                        StrokeThickness="1"
                                        VerticalOptions="Center">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <VerticalStackLayout
                                                Grid.Column="0"
                                                Spacing="0"
                                                VerticalOptions="Center">
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    Text="{Binding Name}"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    FontSize="16"
                                                    Text="{Binding Email}"
                                                    TextColor="{StaticResource Gray600}"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    FontSize="16"
                                                    Text="{Binding Phone}"
                                                    TextColor="{StaticResource Gray600}"
                                                    VerticalOptions="Center" />
                                            </VerticalStackLayout>
                                            <Image
                                                Grid.Column="1"
                                                HeightRequest="33"
                                                HorizontalOptions="End"
                                                Source="more_icon.svg"
                                                VerticalOptions="Center"
                                                WidthRequest="33" />
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SearchViewModel}}, Path=NavigateToResultCommand}" CommandParameter="{Binding .}" />
                                            </Grid.GestureRecognizers>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>