<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="c971_project.Views.AssessmentPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Assessment"
    BackgroundColor="{StaticResource Cream}">

    <Grid>
        <!--  Full screen loading overlay  -->
        <Grid
            BackgroundColor="#80000000"
            HorizontalOptions="Fill"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Fill"
            ZIndex="1000">

            <ActivityIndicator
                HeightRequest="60"
                HorizontalOptions="Center"
                IsRunning="True"
                VerticalOptions="Center"
                WidthRequest="60"
                Color="White" />
        </Grid>
        <!--  Main scrollable content  -->
        <ScrollView>
            <VerticalStackLayout Padding="20">

                <!--  Header  -->
                <Border
                    Margin="0,10,0,0"
                    Padding="20,10"
                    BackgroundColor="{StaticResource DarkBlue}"
                    HorizontalOptions="Center"
                    Stroke="{StaticResource LightBrown}"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="2">

                    <Label
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeaderLabel}"
                        Text="{Binding Assessment.Name}"
                        TextColor="{StaticResource Cream}" />
                </Border>

                <HorizontalStackLayout
                    Grid.Row="0"
                    Margin="0"
                    Padding="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Start">

                    <!--  Edit Icon  -->
                    <Border
                        Grid.Row="0"
                        Margin="7"
                        BackgroundColor="{StaticResource Charcoal}"
                        HeightRequest="55"
                        HorizontalOptions="Center"
                        StrokeShape="Ellipse"
                        VerticalOptions="Start"
                        WidthRequest="55"
                        ZIndex="999">

                        <Border.Shadow>
                            <Shadow
                                Brush="#40000000"
                                Opacity="0.24"
                                Radius="8"
                                Offset="0,4" />
                        </Border.Shadow>

                        <Image
                            HeightRequest="30"
                            HorizontalOptions="Center"
                            Source="edit_icon.png"
                            VerticalOptions="Center"
                            WidthRequest="30">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding EditAssessmentCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Border>

                    <!--  Delete Icon  -->
                    <Border
                        Grid.Row="0"
                        Margin="7"
                        BackgroundColor="{StaticResource Charcoal}"
                        HeightRequest="55"
                        HorizontalOptions="Center"
                        StrokeShape="Ellipse"
                        VerticalOptions="Start"
                        WidthRequest="55"
                        ZIndex="999">

                        <Border.Shadow>
                            <Shadow
                                Brush="#40000000"
                                Opacity="0.24"
                                Radius="8"
                                Offset="0,4" />
                        </Border.Shadow>

                        <Image
                            HeightRequest="30"
                            HorizontalOptions="Center"
                            Source="trash2_icon.svg"
                            VerticalOptions="Center"
                            WidthRequest="30">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding DeleteAssessmentCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Border>
                </HorizontalStackLayout>
                <!--  Assessment Info Card  -->
                <Border
                    Padding="25"
                    BackgroundColor="{StaticResource White}"
                    Stroke="{StaticResource Charcoal}"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="3">

                    <Border.Shadow>
                        <Shadow
                            Brush="{StaticResource MediumGray}"
                            Opacity="0.3"
                            Radius="8"
                            Offset="2,2" />
                    </Border.Shadow>



                    <!--  Main content  -->
                    <VerticalStackLayout Spacing="12">


                        <!--  Main content  -->
                        <VerticalStackLayout Spacing="12">
                            <!--  assessment number  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Id:"
                                    TextColor="{StaticResource MediumGray}" />
                                <Label Text="{Binding Assessment.Id}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  assessment type  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Type:"
                                    TextColor="{StaticResource MediumGray}" />
                                <Label Text="{Binding Assessment.Type}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  assessment status  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Status:"
                                    TextColor="{StaticResource MediumGray}" />
                                <Label Text="{Binding Assessment.Status}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>





                            <!--  start date  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Start date:"
                                    TextColor="{StaticResource MediumGray}" />
                                <Label Text="{Binding Assessment.StartDateTime, StringFormat='{0:MM/dd/yyyy}'}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  assessment notify start  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Nofify on start:"
                                    TextColor="{StaticResource MediumGray}" />
                                <Label Text="{Binding Assessment.NotifyStartDate}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  end date  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="End date:"
                                    TextColor="{StaticResource MediumGray}" />
                                <Label Text="{Binding Assessment.EndDateTime, StringFormat='{0:MM/dd/yyyy}'}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  assessment notify end  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Notify on End:"
                                    TextColor="{StaticResource MediumGray}" />
                                <Label Text="{Binding Assessment.NotifyEndDate}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>





                        </VerticalStackLayout>



                    </VerticalStackLayout>


                </Border>
            </VerticalStackLayout>
        </ScrollView>



    </Grid>
</ContentPage>