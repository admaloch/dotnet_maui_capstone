<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="c971_project.Views.AddTermPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Add Term"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:System="clr-namespace:System;assembly=mscorlib"

    >

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Term Name -->
            <VerticalStackLayout Spacing="5">
                <Label
                    Style="{StaticResource FieldLabel}"
                    Text="Term Name"
                    TextColor="{StaticResource DarkBlue}" />
                <Entry
                    Placeholder="Enter term name"
                    Text="{Binding NewTerm.Name, Mode=TwoWay}"
                    TextColor="{StaticResource DarkBlue}" />
                <Label
                    Margin="5,0,0,0"
                    FontSize="12"
                    TextColor="Red"
                    IsVisible="{Binding NewTerm.HasErrors}"
                    Text="{Binding NewTerm, Converter={StaticResource FirstErrorConverter}, ConverterParameter=Name}" />
            </VerticalStackLayout>

            <!-- Start Date -->
            <VerticalStackLayout Spacing="5">
                <Label
                    Style="{StaticResource FieldLabel}"
                    Text="Start Date"
                    TextColor="{StaticResource DarkBlue}" />
                <DatePicker
                    Date="{Binding NewTerm.StartDate, Mode=TwoWay}"
                    MinimumDate="{x:Static System:DateTime.Today}" />
                <Label
                    Margin="5,0,0,0"
                    FontSize="12"
                    TextColor="Red"
                    IsVisible="{Binding NewTerm.HasErrors}"
                    Text="{Binding NewTerm, Converter={StaticResource FirstErrorConverter}, ConverterParameter=StartDate}" />
            </VerticalStackLayout>

            <!-- Save Button -->
            <Button
                Text="Save Term"
                Command="{Binding SaveTermCommand}"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
