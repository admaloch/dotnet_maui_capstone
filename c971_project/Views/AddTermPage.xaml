<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="c971_project.Views.AddTermPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    Title="Add Term"
    BackgroundColor="{StaticResource Cream}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!--  Header  -->
            <Label
                Margin="0,20,0,0"
                HorizontalOptions="Center"
                Style="{StaticResource HeaderLabel}"
                Text="Add new Term" />

            <!--  Card container  -->
            <Border
                Padding="20"
                BackgroundColor="White"
                Stroke="{StaticResource Charcoal}"
                StrokeShape="RoundRectangle 12"
                StrokeThickness="1">

                <Border.Shadow>
                    <Shadow
                        Brush="{StaticResource DarkBlue}"
                        Opacity="0.15"
                        Radius="8"
                        Offset="0,4" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="15">

                    <!--  Term Name  -->
                    <VerticalStackLayout Spacing="5">
                        <Label
                            Style="{StaticResource FieldLabel}"
                            Text="Term Name"
                            TextColor="{StaticResource DarkBlue}" />
                        <Border
                            Padding="10"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 8">
                            <Entry
                                BackgroundColor="Transparent"
                                Placeholder="Enter term name"
                                Text="{Binding NewTerm.Name, Mode=TwoWay}"
                                TextColor="{StaticResource DarkBlue}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Start Date  -->
                    <VerticalStackLayout Spacing="5">
                        <Label
                            Style="{StaticResource FieldLabel}"
                            Text="Start Date"
                            TextColor="{StaticResource DarkBlue}" />
                        <Border
                            Padding="10"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 8">
                            <DatePicker
                                BackgroundColor="Transparent"
                                Date="{Binding NewTerm.StartDate, Mode=TwoWay}"
                                MinimumDate="{x:Static System:DateTime.Today}" />
                        </Border>
                    </VerticalStackLayout>



                    <!--  Save Button  -->
                    <Button
                        Command="{Binding SaveTermCommand}"
                        HorizontalOptions="Center"
                        Text="Save Term" />

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
