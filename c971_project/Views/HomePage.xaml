<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="c971_project.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Student Portal"
    BackgroundColor="{StaticResource Cream}">

    <Grid>
        <!--  Main scrollable content  -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <!--  Header  -->
                <Label
                    Margin="0,20,0,0"
                    HorizontalOptions="Center"
                    Style="{StaticResource HeaderLabel}"
                    Text="Student Information" />
                <!--  Top margin: 20  -->

                <!--  Student Info Card  -->
                <Border
                    Padding="15"
                    BackgroundColor="{StaticResource White}"
                    Stroke="{StaticResource LightBrown}"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="1">

                    <Border.Shadow>
                        <Shadow
                            Brush="{StaticResource MediumGray}"
                            Opacity="0.3"
                            Radius="8"
                            Offset="2,2" />
                    </Border.Shadow>

                    <!--  Use AbsoluteLayout to position content + floating icon  -->
                    <AbsoluteLayout>

                        <!--  Main content - REMOVE AbsoluteLayout properties  -->
                        <VerticalStackLayout Spacing="12">
                            <!--  Student ID  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Student ID:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="100" />
                                <Label Text="{Binding CurrentStudent.StudentId}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  Name  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Name:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="100" />
                                <Label Text="{Binding CurrentStudent.Name}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  Email  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Email:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="100" />
                                <Label Text="{Binding CurrentStudent.Email}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  Status  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Status:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="100" />
                                <Label Text="{Binding CurrentStudent.Status}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  Major  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Major:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="100" />
                                <Label Text="{Binding CurrentStudent.Major}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <!--  Floating Edit Icon in bottom right corner  -->
                        <Border
                            Margin="5,5,5,5"
                            AbsoluteLayout.LayoutBounds="1,0,36,36"
                            AbsoluteLayout.LayoutFlags="PositionProportional"
                            BackgroundColor="{StaticResource MediumGray}"
                            HeightRequest="36"
                            StrokeShape="Ellipse"
                            WidthRequest="36">

                            <Border.Shadow>
                                <!--  More realistic shadow  -->
                                <Shadow
                                    Brush="#40000000"
                                    Opacity="0.24"
                                    Radius="8"
                                    Offset="0,4" />
                            </Border.Shadow>

                            <Image
                                HeightRequest="20"
                                HorizontalOptions="Center"
                                Source="edit_icon.svg"
                                VerticalOptions="Center"
                                WidthRequest="20">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnEditStudentClicked" />
                                </Image.GestureRecognizers>
                            </Image>
                        </Border>

                    </AbsoluteLayout>
                </Border>

                <!--  Terms Section Header  -->
                <Label
                    Margin="0,20,0,10"
                    Style="{StaticResource HeaderLabel}"
                    Text="Academic Terms" />

                <!--  Terms List  -->
                <CollectionView
                    EmptyView="No terms available yet. Add your first term to get started!"
                    ItemsSource="{Binding Terms}"
                    SelectionMode="Single">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,5"
                                Padding="15"
                                BackgroundColor="{StaticResource White}"
                                Stroke="{StaticResource MediumGray}"
                                StrokeShape="RoundRectangle 10"
                                StrokeThickness="1">

                                <Border.Shadow>
                                    <Shadow
                                        Brush="{StaticResource MediumGray}"
                                        Opacity="0.3"
                                        Radius="8"
                                        Offset="2,2" />
                                </Border.Shadow>

                                <VerticalStackLayout Spacing="8">
                                    <Label
                                        FontAttributes="Bold"
                                        Text="{Binding Name}"
                                        TextColor="{StaticResource DarkBlue}" />

                                    <Label Text="{Binding TermNum, StringFormat='Term {0}'}" TextColor="{StaticResource MediumGray}" />

                                    <Label Text="{Binding StartDate, StringFormat='Start: {0:MMM dd, yyyy}'}" TextColor="{StaticResource MediumGray}" />

                                    <Label Text="{Binding EndDate, StringFormat='End: {0:MMM dd, yyyy}'}" TextColor="{StaticResource MediumGray}" />
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!--  Floating Add Term Button with Label  -->
        <HorizontalStackLayout
            Padding="16"
            HorizontalOptions="End"
            InputTransparent="False"
            Spacing="12"
            VerticalOptions="End">

            <!--  Label  -->
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="Add Term"
                TextColor="{StaticResource DarkBlue}"
                VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAddTermClicked" />
                </Label.GestureRecognizers>
            </Label>

            <!--  Circular Button  -->
            <Border
                BackgroundColor="{StaticResource MediumGray}"
                HeightRequest="56"
                HorizontalOptions="Center"
                StrokeShape="Ellipse"
                VerticalOptions="Center"
                WidthRequest="56">

                <Border.Shadow>
                    <!--  More realistic shadow  -->
                    <Shadow
                        Brush="#40000000"
                        Opacity="0.14"
                        Radius="8"
                        Offset="0,2" />
                </Border.Shadow>

                <Image
                    HeightRequest="31"
                    HorizontalOptions="Center"
                    Source="add_icon.svg"
                    VerticalOptions="Center"
                    WidthRequest="31">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAddTermClicked" />
                    </Image.GestureRecognizers>
                </Image>
            </Border>
        </HorizontalStackLayout>

    </Grid>
</ContentPage>