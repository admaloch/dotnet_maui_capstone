<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="c971_project.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}"
    BackgroundColor="{StaticResource Cream}">

    <Grid>
        <!--  Main scrollable content  -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <!--  Header  -->
                <Label
                    Margin="0,20,0,0"
                    HorizontalOptions="Center"
                    Style="{StaticResource HeaderLabel}"
                    Text="Student Information" />
                <!--  Top margin: 20  -->

                <!--  Student Info Card  -->
                <Border
                    Padding="15"
                    BackgroundColor="{StaticResource White}"
                    Stroke="{StaticResource Charcoal}"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="3">

                    <Border.Shadow>
                        <Shadow
                            Brush="{StaticResource MediumGray}"
                            Opacity="0.3"
                            Radius="8"
                            Offset="2,2" />
                    </Border.Shadow>

                    <!--  Use AbsoluteLayout to position content + floating icon  -->
                    <AbsoluteLayout>

                        <!--  Main content - REMOVE AbsoluteLayout properties  -->
                        <VerticalStackLayout Spacing="12">
                            <!--  Student ID  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Student ID:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="100" />
                                <Label Text="{Binding CurrentStudent.StudentId}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  Name  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Name:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="100" />
                                <Label Text="{Binding CurrentStudent.Name}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  Email  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Email:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="100" />
                                <Label Text="{Binding CurrentStudent.Email}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  Status  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Status:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="100" />
                                <Label Text="{Binding CurrentStudent.Status}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  Major  -->
                            <HorizontalStackLayout Spacing="10">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Major:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="100" />
                                <Label Text="{Binding CurrentStudent.Major}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <!--  Floating Edit Icon in bottom right corner  -->
                        <Border
                            Margin="5,5,5,5"
                            AbsoluteLayout.LayoutBounds="1,0,40,40"
                            AbsoluteLayout.LayoutFlags="PositionProportional"
                            BackgroundColor="{StaticResource MediumGray}"
                            HeightRequest="40"
                            StrokeShape="Ellipse"
                            WidthRequest="40">

                            <Border.Shadow>
                                <!--  More realistic shadow  -->
                                <Shadow
                                    Brush="#40000000"
                                    Opacity="0.24"
                                    Radius="8"
                                    Offset="0,4" />
                            </Border.Shadow>

                            <Image
                                HeightRequest="25"
                                HorizontalOptions="Center"
                                Source="edit_icon.svg"
                                VerticalOptions="Center"
                                WidthRequest="25">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding EditStudentCommand}" />
                                </Image.GestureRecognizers>
                            </Image>
                        </Border>

                    </AbsoluteLayout>
                </Border>

                <!--  Terms Section Header  -->
                <Label
                    Margin="0,20,0,10"
                    Style="{StaticResource HeaderLabel}"
                    Text="Academic Terms" />

                <!--  Terms List  -->
                <CollectionView
                    EmptyView="No terms available yet. Add your first term to get started!"
                    ItemsSource="{Binding Terms}"
                    SelectionMode="Single">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,5"
                                Padding="20, 15"
                                BackgroundColor="{StaticResource White}"
                                Stroke="{StaticResource Charcoal}"
                                StrokeShape="RoundRectangle 10"
                                StrokeThickness="3">


                                <Grid>
                                    <!--  Content  -->
                                    <VerticalStackLayout Padding="0,0,40,0" Spacing="8">

                                        <Label
                                            FontAttributes="Bold"
                                            HorizontalOptions="Start"
                                            MaximumWidthRequest="250"
                                            Text="{Binding Name}"
                                            TextColor="{StaticResource DarkBlue}" />

                                    </VerticalStackLayout>

                                    <!--  Icons container  -->
                                    <HorizontalStackLayout
                                        HorizontalOptions="End"
                                        Spacing="10"
                                        VerticalOptions="Start">

                                        <!--  Delete icon  -->
                                        <Image
                                            HeightRequest="26"
                                            Source="trash_icon.svg"
                                            WidthRequest="26">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteTermCommand}" CommandParameter="{Binding .}" />
                                            </Image.GestureRecognizers>
                                        </Image>

                                        <!--  More / navigate icon  -->
                                        <Image
                                            HeightRequest="26"
                                            Source="more_icon.svg"
                                            WidthRequest="26">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.TermPageCommand}" CommandParameter="{Binding .}" />
                                            </Image.GestureRecognizers>
                                        </Image>

                                    </HorizontalStackLayout>

                                </Grid>

                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!--  Floating Add Term Button with Label  -->
        <HorizontalStackLayout
            Padding="16"
            HorizontalOptions="End"
            InputTransparent="False"
            Spacing="12"
            VerticalOptions="End">

            <!--  Label  -->
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="Add Term"
                TextColor="{StaticResource DarkBlue}"
                VerticalOptions="Center" />

            <!--  Circular Button  -->
            <Border
                BackgroundColor="{StaticResource DarkBlue}"
                HeightRequest="56"
                StrokeShape="Ellipse"
                WidthRequest="56">
                <Border.Shadow>
                    <Shadow
                        Brush="{StaticResource DarkBlue}"
                        Opacity="0.5"
                        Radius="8"
                        Offset="2,2" />
                </Border.Shadow>

                <Image
                    HeightRequest="35"
                    HorizontalOptions="Center"
                    Source="add_icon.svg"
                    VerticalOptions="Center"
                    WidthRequest="35">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AddTermCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </Border>
        </HorizontalStackLayout>

    </Grid>
</ContentPage>