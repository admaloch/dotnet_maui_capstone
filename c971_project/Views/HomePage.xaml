<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="c971_project.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Home"
    BackgroundColor="{StaticResource Cream}">

    <Grid>


        <!--  Main scrollable content  -->
        <ScrollView>
            <VerticalStackLayout Padding="20,0">

                <!--  Header  -->
                <Border
                    Margin="0,20,0,0"
                    Padding="20,10"
                    BackgroundColor="{StaticResource DarkBlue}"
                    HorizontalOptions="Center"
                    Stroke="{StaticResource LightBrown}"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="2">

                    <Label
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeaderLabel}"
                        Text="Student Information"
                        TextColor="{StaticResource Cream}" />
                </Border>
                <HorizontalStackLayout
                    Grid.Row="0"
                    Margin="0"
                    Padding="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Start">
                    <!--  logout Icon at Top Right of Page  -->
                    <Border
                        Grid.Row="0"
                        Margin="5,7,2,7"
                        BackgroundColor="{StaticResource Charcoal}"
                        HeightRequest="55"
                        HorizontalOptions="Center"
                        StrokeShape="Ellipse"
                        VerticalOptions="Start"
                        WidthRequest="55"
                        ZIndex="999">

                        <Border.Shadow>
                            <Shadow
                                Brush="#40000000"
                                Opacity="0.24"
                                Radius="8"
                                Offset="0,4" />
                        </Border.Shadow>

                        <Image
                            HeightRequest="30"
                            HorizontalOptions="Center"
                            Source="logout_icon.svg"
                            VerticalOptions="Center"
                            WidthRequest="30">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding LogoutCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Border>
                    <!--  Delete Icon at Top Right of Page  -->
                    <Border
                        Grid.Row="0"
                        Margin="3,7,5,7"
                        BackgroundColor="{StaticResource Charcoal}"
                        HeightRequest="55"
                        HorizontalOptions="Center"
                        StrokeShape="Ellipse"
                        VerticalOptions="Start"
                        WidthRequest="55"
                        ZIndex="999">

                        <Border.Shadow>
                            <Shadow
                                Brush="#40000000"
                                Opacity="0.24"
                                Radius="8"
                                Offset="0,4" />
                        </Border.Shadow>

                        <Image
                            HeightRequest="30"
                            HorizontalOptions="Center"
                            Source="trash2_icon.svg"
                            VerticalOptions="Center"
                            WidthRequest="30">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding DeleteStudentCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Border>
                </HorizontalStackLayout>
                <!--  Top margin: 20  -->

                <!--  Student Info Card  -->
                <Border
                    Padding="15,0,0,15"
                    BackgroundColor="{StaticResource White}"
                    Stroke="{StaticResource Charcoal}"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="3">

                    <Border.Shadow>
                        <Shadow
                            Brush="{StaticResource MediumGray}"
                            Opacity="0.3"
                            Radius="8"
                            Offset="2,2" />
                    </Border.Shadow>

                    <!--  Use AbsoluteLayout to position content + floating icon  -->
                    <AbsoluteLayout>

                        <VerticalStackLayout Spacing="12">
                            <!--  Student ID  -->
                            <HorizontalStackLayout Margin="0,15,0,0" Spacing="0">
                                <Label
                                    FontAttributes="Bold"
                                    Text="ID:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="55" />
                                <Label Text="{Binding CurrentStudent.StudentIdNumber}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  Name  -->
                            <HorizontalStackLayout Spacing="0">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Name:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="55" />
                                <Label Text="{Binding CurrentStudent.Name}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  Email  -->
                            <HorizontalStackLayout Spacing="0">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Email:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="55" />
                                <Label Text="{Binding CurrentStudent.Email}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  Status  -->
                            <HorizontalStackLayout Spacing="0">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Status:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="55" />
                                <Label Text="{Binding CurrentStudent.Status}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>

                            <!--  Major  -->
                            <HorizontalStackLayout Spacing="0">
                                <Label
                                    FontAttributes="Bold"
                                    Text="Major:"
                                    TextColor="{StaticResource MediumGray}"
                                    WidthRequest="55" />
                                <Label Text="{Binding CurrentStudent.Major}" TextColor="{StaticResource DarkBlue}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <!--  Floating Edit Icon in bottom right corner  -->
                        <Border
                            Margin="5,5,5,5"
                            AbsoluteLayout.LayoutBounds="1,0,65,65"
                            AbsoluteLayout.LayoutFlags="PositionProportional"
                            BackgroundColor="{StaticResource MediumGray}"
                            HeightRequest="45"
                            StrokeShape="Ellipse"
                            WidthRequest="45">

                            <Border.Shadow>
                                <!--  More realistic shadow  -->
                                <Shadow
                                    Brush="#40000000"
                                    Opacity="0.24"
                                    Radius="8"
                                    Offset="0,4" />
                            </Border.Shadow>

                            <Image
                                HeightRequest="25"
                                HorizontalOptions="Center"
                                Source="edit_icon.svg"
                                VerticalOptions="Center"
                                WidthRequest="25">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding EditStudentCommand}" />
                                </Image.GestureRecognizers>
                            </Image>
                        </Border>

                    </AbsoluteLayout>
                </Border>

                <!--  Terms Section Header  -->
                <Border
                    Margin="0,20,0,10"
                    Padding="20,10"
                    BackgroundColor="{StaticResource DarkBlue}"
                    HorizontalOptions="Center"
                    Stroke="{StaticResource LightBrown}"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="2">

                    <Label
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeaderLabel}"
                        Text="Academic Terms"
                        TextColor="{StaticResource Cream}" />
                </Border>

                <!--  Terms List  -->
                <Grid Margin="0,0,0,70" RowDefinitions="Auto,*">
                    <CollectionView
                        Grid.Row="1"
                        ItemsSource="{Binding Terms}"
                        MaximumHeightRequest="300"
                        MinimumHeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,5"
                                    Padding="10,8"
                                    BackgroundColor="{StaticResource White}"
                                    HeightRequest="70"
                                    Stroke="{StaticResource Charcoal}"
                                    StrokeShape="RoundRectangle 10"
                                    StrokeThickness="3">
                                    <Grid>
                                        <!--  Content  -->
                                        <VerticalStackLayout VerticalOptions="Center">
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="Start"
                                                Text="{Binding Name}"
                                                TextColor="{StaticResource DarkBlue}" />
                                        </VerticalStackLayout>
                                        <!--  Icons container  -->
                                        <HorizontalStackLayout
                                            HorizontalOptions="End"
                                            Spacing="0"
                                            VerticalOptions="Center">

                                            <!--  More / navigate icon  -->
                                            <Image
                                                HeightRequest="35"
                                                Source="more_icon.svg"
                                                WidthRequest="35">
                                                <Image.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.TermPageCommand}" CommandParameter="{Binding .}" />
                                                </Image.GestureRecognizers>
                                            </Image>
                                        </HorizontalStackLayout>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                        <!--  EmptyView with styled box  -->
                        <CollectionView.EmptyView>
                            <Border
                                Padding="15"
                                BackgroundColor="{StaticResource White}"
                                HeightRequest="150"
                                HorizontalOptions="Fill"
                                Stroke="{StaticResource Charcoal}"
                                StrokeShape="RoundRectangle 15"
                                StrokeThickness="3"
                                VerticalOptions="Center">

                                <VerticalStackLayout HorizontalOptions="Center" Spacing="15">
                                    <Image
                                        HeightRequest="35"
                                        HorizontalOptions="Center"
                                        Source="search_icon.svg"
                                        WidthRequest="35" />

                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="18"
                                        HorizontalOptions="Center"
                                        HorizontalTextAlignment="Center"
                                        Text="No Terms Yet"
                                        TextColor="{StaticResource DarkBlue}" />

                                    <Label
                                        FontSize="14"
                                        HorizontalOptions="Center"
                                        HorizontalTextAlignment="Center"
                                        Text="Add your first term to get started!"
                                        TextColor="{StaticResource Charcoal}" />
                                </VerticalStackLayout>
                            </Border>
                        </CollectionView.EmptyView>

                    </CollectionView>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>

        <!--  Floating Add Term Button with Label  -->
        <HorizontalStackLayout
            Padding="16"
            HorizontalOptions="End"
            InputTransparent="False"
            Spacing="12"
            VerticalOptions="End">

            <!--  Label  -->
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="Add Term"
                TextColor="{StaticResource DarkBlue}"
                VerticalOptions="Center" />

            <!--  Circular Button  -->
            <Border
                BackgroundColor="{StaticResource Charcoal}"
                HeightRequest="56"
                StrokeShape="Ellipse"
                WidthRequest="56">
                <Border.Shadow>
                    <Shadow
                        Brush="{StaticResource DarkBlue}"
                        Opacity="0.5"
                        Radius="8"
                        Offset="2,2" />
                </Border.Shadow>

                <Image
                    HeightRequest="35"
                    HorizontalOptions="Center"
                    Source="add_icon.svg"
                    VerticalOptions="Center"
                    WidthRequest="35">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AddTermCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </Border>
        </HorizontalStackLayout>

    </Grid>
</ContentPage>