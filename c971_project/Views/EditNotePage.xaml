<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="c971_project.Views.EditNotePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    Title="Edit Note"
    BackgroundColor="{StaticResource Cream}">
    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">

                <!--  Header  -->
                <Border
                    Margin="0,10,0,0"
                    Padding="20,10"
                    BackgroundColor="{StaticResource DarkBlue}"
                    HorizontalOptions="Center"
                    Stroke="{StaticResource LightBrown}"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="2">

                    <Label
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeaderLabel}"
                        Text="{Binding Note.Title}"
                        TextColor="{StaticResource Cream}" />
                </Border>


                <!--  Card container  -->
                <Border
                    Padding="20"
                    BackgroundColor="{StaticResource LightGray}"
                    HeightRequest="400"
                    Stroke="{StaticResource Charcoal}"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="3">

                    <Border.Shadow>
                        <Shadow
                            Brush="{StaticResource DarkBlue}"
                            Opacity="0.15"
                            Radius="8"
                            Offset="0,4" />
                    </Border.Shadow>

                    <VerticalStackLayout>

                        <!--  Note Title  -->
                        <VerticalStackLayout>
                            <Label Style="{StaticResource FieldLabel}" Text="Title" />

                            <Border Style="{StaticResource FieldBorder}">
                                <Entry
                                    Placeholder="Enter note title"
                                    Style="{StaticResource FieldEntry}"
                                    Text="{Binding Note.Title, Mode=TwoWay}" />
                            </Border>
                        </VerticalStackLayout>

                        <!--  Note Body  -->
                        <VerticalStackLayout>
                            <Label Style="{StaticResource FieldLabel}" Text="Body" />

                            <Border Style="{StaticResource FieldBorder}">
                                <Editor
                                    MaxLength="1000"
                                    Placeholder="Enter note body"
                                    Style="{StaticResource FieldEditor}"
                                    Text="{Binding Note.Body, Mode=TwoWay}" />
                            </Border>
                        </VerticalStackLayout>



                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
        <!--  Floating Save Button  -->
        <HorizontalStackLayout
            Padding="16"
            HorizontalOptions="End"
            InputTransparent="False"
            Spacing="12"
            VerticalOptions="End">

            <!--  Label  -->
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="Update Note"
                TextColor="{StaticResource DarkBlue}"
                VerticalOptions="Center" />

            <!--  Circular Button  -->
            <Border
                BackgroundColor="{StaticResource DarkBlue}"
                HeightRequest="55"
                StrokeShape="Ellipse"
                WidthRequest="55">
                <Border.Shadow>
                    <Shadow
                        Brush="{StaticResource DarkBlue}"
                        Opacity="0.5"
                        Radius="8"
                        Offset="0,4" />
                </Border.Shadow>

                <Image
                    HeightRequest="45"
                    HorizontalOptions="Center"
                    Source="check_icon.svg"
                    VerticalOptions="Center"
                    WidthRequest="45">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SaveNoteCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </Border>

        </HorizontalStackLayout>
    </Grid>
</ContentPage>
