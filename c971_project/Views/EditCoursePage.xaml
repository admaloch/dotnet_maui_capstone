<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="c971_project.Views.EditCoursePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:system="clr-namespace:System;assembly=netstandard"
    Title="Edit Course"
    BackgroundColor="{StaticResource Cream}">
    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">

                <!--  Header  -->
                <Label
                    Margin="0,20,0,0"
                    HorizontalOptions="Center"
                    Style="{StaticResource HeaderLabel}"
                    Text="{Binding Course.Name}" />

                <!--  Card container  -->
                <Border
                    Margin="0,0,0,60"
                    Padding="20"
                    BackgroundColor="{StaticResource LightGray}"
                    Stroke="{StaticResource Charcoal}"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="3">

                    <Border.Shadow>
                        <Shadow
                            Brush="{StaticResource DarkBlue}"
                            Opacity="0.15"
                            Radius="8"
                            Offset="0,4" />
                    </Border.Shadow>

                    <VerticalStackLayout>
                        <Label
                            Margin="0,20,0,10"
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="Course Information"
                            TextColor="{StaticResource DarkBlue}" />

                        <!--  Course Name  -->
                        <VerticalStackLayout Spacing="1">
                            <Label
                                Style="{StaticResource FieldLabel}"
                                Text="Name *"
                                TextColor="{StaticResource DarkBlue}" />
                            <Border BackgroundColor="White" StrokeShape="RoundRectangle 8">
                                <Entry
                                    BackgroundColor="Transparent"
                                    Placeholder="Enter course name"
                                    Text="{Binding Course.Name, Mode=TwoWay}"
                                    TextColor="{StaticResource DarkBlue}" />
                            </Border>
                        </VerticalStackLayout>

                        <!--  Course Number  -->
                        <VerticalStackLayout Spacing="1">
                            <Label
                                Style="{StaticResource FieldLabel}"
                                Text="Number *"
                                TextColor="{StaticResource DarkBlue}" />
                            <Border BackgroundColor="White" StrokeShape="RoundRectangle 8">
                                <Entry
                                    BackgroundColor="Transparent"
                                    Placeholder="e.g., MATH101"
                                    Text="{Binding Course.CourseNum, Mode=TwoWay}"
                                    TextColor="{StaticResource DarkBlue}" />
                            </Border>
                        </VerticalStackLayout>

                        <!--  Credit Units  -->
                        <VerticalStackLayout Spacing="1">
                            <Label
                                Style="{StaticResource FieldLabel}"
                                Text="Credit Units *"
                                TextColor="{StaticResource DarkBlue}" />
                            <Border BackgroundColor="White" StrokeShape="RoundRectangle 8">
                                <Picker
                                    Title="Select credit units"
                                    ItemsSource="{Binding CreditUnitOptions}"
                                    SelectedItem="{Binding Course.CuNum, Mode=TwoWay}"
                                    TextColor="{StaticResource DarkBlue}">
                                    <Picker.ItemDisplayBinding>
                                        <Binding Path="." />
                                    </Picker.ItemDisplayBinding>
                                </Picker>
                            </Border>
                        </VerticalStackLayout>

                        <!--  Start Date  -->
                        <VerticalStackLayout Spacing="5">
                            <Label
                                Style="{StaticResource FieldLabel}"
                                Text="Start Date"
                                TextColor="{StaticResource DarkBlue}" />

                            <Grid
                                ColumnDefinitions="Auto,*,Auto,*"
                                ColumnSpacing="10"
                                VerticalOptions="Center">
                                <!--  Calendar Icon  -->
                                <Image
                                    Grid.Column="0"
                                    HeightRequest="20"
                                    Source="calendar_icon.svg"
                                    VerticalOptions="Center"
                                    WidthRequest="20" />

                                <!--  DatePicker  -->
                                <DatePicker
                                    Grid.Column="1"
                                    BackgroundColor="White"
                                    Date="{Binding Course.StartDate, Mode=TwoWay}"
                                    HorizontalOptions="Fill"
                                    MinimumDate="{x:Static system:DateTime.Today}"
                                    TextColor="{StaticResource DarkBlue}" />


                            </Grid>
                        </VerticalStackLayout>

                        <!--  Start Date Notification Toggle  -->
                        <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                            <Switch
                                IsToggled="{Binding Course.NotifyStartDate, Mode=TwoWay}"
                                OnColor="{StaticResource DarkBlue}"
                                ThumbColor="{StaticResource Cream}"
                                VerticalOptions="Center" />
                            <Label
                                Text="{Binding Course.StartDate, StringFormat='Notify me on Start Date'}"
                                TextColor="{StaticResource DarkBlue}"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <!--  End Date  -->
                        <VerticalStackLayout Spacing="5">
                            <Label
                                Style="{StaticResource FieldLabel}"
                                Text="End Date"
                                TextColor="{StaticResource DarkBlue}" />

                            <Grid
                                ColumnDefinitions="Auto,*,Auto,*"
                                ColumnSpacing="10"
                                VerticalOptions="Center">
                                <!--  Calendar Icon  -->
                                <Image
                                    Grid.Column="0"
                                    HeightRequest="20"
                                    Source="calendar_icon.svg"
                                    VerticalOptions="Center"
                                    WidthRequest="20" />

                                <!--  DatePicker  -->
                                <DatePicker
                                    Grid.Column="1"
                                    BackgroundColor="White"
                                    Date="{Binding Course.EndDate, Mode=TwoWay}"
                                    HorizontalOptions="Fill"
                                    MinimumDate="{x:Static system:DateTime.Today}"
                                    TextColor="{StaticResource DarkBlue}" />


                            </Grid>
                        </VerticalStackLayout>

                        <!--  End Date Notification Toggle  -->
                        <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                            <Switch
                                IsToggled="{Binding Course.NotifyEndDate, Mode=TwoWay}"
                                OnColor="{StaticResource DarkBlue}"
                                ThumbColor="{StaticResource Cream}"
                                VerticalOptions="Center" />
                            <Label
                                Text="{Binding Course.EndDate, StringFormat='Notify me on End Date'}"
                                TextColor="{StaticResource DarkBlue}"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <!--  INSTRUCTOR INFORMATION SECTION  -->
                        <Label
                            Margin="0,20,0,10"
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="Instructor Information"
                            TextColor="{StaticResource DarkBlue}" />

                        <!--  Instructor Name  -->
                        <VerticalStackLayout Spacing="1">
                            <Label
                                Style="{StaticResource FieldLabel}"
                                Text="Name *"
                                TextColor="{StaticResource DarkBlue}" />
                            <Border BackgroundColor="White" StrokeShape="RoundRectangle 8">
                                <Entry
                                    BackgroundColor="Transparent"
                                    Placeholder="Enter instructor name"
                                    Text="{Binding Instructor.Name, Mode=TwoWay}"
                                    TextColor="{StaticResource DarkBlue}" />
                            </Border>
                        </VerticalStackLayout>

                        <!--  Instructor Email  -->
                        <VerticalStackLayout Spacing="1">
                            <Label
                                Style="{StaticResource FieldLabel}"
                                Text="Email *"
                                TextColor="{StaticResource DarkBlue}" />
                            <Border BackgroundColor="White" StrokeShape="RoundRectangle 8">
                                <Entry
                                    BackgroundColor="Transparent"
                                    Keyboard="Email"
                                    Placeholder="instructor@school.edu"
                                    Text="{Binding Instructor.Email, Mode=TwoWay}"
                                    TextColor="{StaticResource DarkBlue}" />
                            </Border>
                        </VerticalStackLayout>

                        
                        <!--  Instructor Phone  -->
                        <VerticalStackLayout Spacing="1">
                            <Label
                                Style="{StaticResource FieldLabel}"
                                Text="Phone *"
                                TextColor="{StaticResource DarkBlue}" />
                            <Border BackgroundColor="White" StrokeShape="RoundRectangle 8">
                                <Entry
                                    BackgroundColor="Transparent"
                                    Keyboard="Telephone"
                                    Placeholder="(555) 123-4567"
                                    Text="{Binding Instructor.Phone, Mode=TwoWay}"
                                    TextColor="{StaticResource DarkBlue}" />
                            </Border>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <!--  Floating Save Button  -->
        <HorizontalStackLayout
            Padding="16"
            HorizontalOptions="End"
            InputTransparent="False"
            Spacing="12"
            VerticalOptions="End">

            <!--  Label  -->
            <Label
                FontAttributes="Bold"
                FontSize="22"
                Text="Save Course"
                TextColor="{StaticResource DarkBlue}"
                VerticalOptions="Center" />

            <!--  Circular Button  -->
            <Border
                BackgroundColor="{StaticResource DarkBlue}"
                HeightRequest="55"
                StrokeShape="Ellipse"
                WidthRequest="55">
                <Border.Shadow>
                    <Shadow
                        Brush="{StaticResource DarkBlue}"
                        Opacity="0.5"
                        Radius="8"
                        Offset="0,4" />
                </Border.Shadow>

                <Image
                    HeightRequest="45"
                    HorizontalOptions="Center"
                    Source="check_icon.svg"
                    VerticalOptions="Center"
                    WidthRequest="45">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SaveCourseCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </Border>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>