<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="c971_project.Views.NotePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Course.CourseNum, StringFormat='{0} Note'}"
    BackgroundColor="{StaticResource Cream}">

    <Grid>
        <!--  Main scrollable content  -->
        <ScrollView>
            <VerticalStackLayout Padding="20">

                <!--  Header  -->
                <Border
                    Margin="0,10,0,0"
                    Padding="20,10"
                    BackgroundColor="{StaticResource DarkBlue}"
                    HorizontalOptions="Center"
                    Stroke="{StaticResource LightBrown}"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="2">

                    <Label
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Style="{StaticResource HeaderLabel}"
                        Text="{Binding Note.Title}"
                        TextColor="{StaticResource Cream}" />
                </Border>

                <HorizontalStackLayout
                    Grid.Row="0"
                    Margin="0"
                    Padding="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Start">

                    <!--  Edit Icon  -->
                    <Border
                        Grid.Row="0"
                        Margin="15"
                        BackgroundColor="{StaticResource Charcoal}"
                        HeightRequest="55"
                        HorizontalOptions="Center"
                        StrokeShape="Ellipse"
                        VerticalOptions="Start"
                        WidthRequest="55"
                        ZIndex="999">

                        <Border.Shadow>
                            <Shadow
                                Brush="#40000000"
                                Opacity="0.24"
                                Radius="8"
                                Offset="0,4" />
                        </Border.Shadow>

                        <Image
                            HeightRequest="30"
                            HorizontalOptions="Center"
                            Source="edit_icon.png"
                            VerticalOptions="Center"
                            WidthRequest="30">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding EditNoteCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Border>
                    <!--  Share Icon  -->
                    <Border
                        Grid.Row="0"
                        Margin="15"
                        BackgroundColor="{StaticResource Charcoal}"
                        HeightRequest="55"
                        HorizontalOptions="Center"
                        StrokeShape="Ellipse"
                        VerticalOptions="Start"
                        WidthRequest="55"
                        ZIndex="999">

                        <Border.Shadow>
                            <Shadow
                                Brush="#40000000"
                                Opacity="0.24"
                                Radius="8"
                                Offset="0,4" />
                        </Border.Shadow>

                        <Image
                            HeightRequest="30"
                            HorizontalOptions="Center"
                            Source="share_icon.png"
                            VerticalOptions="Center"
                            WidthRequest="30">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ShareNoteCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Border>
                    <!--  Delete Icon  -->
                    <Border
                        Grid.Row="0"
                        Margin="15"
                        BackgroundColor="{StaticResource Charcoal}"
                        HeightRequest="55"
                        HorizontalOptions="Center"
                        StrokeShape="Ellipse"
                        VerticalOptions="Start"
                        WidthRequest="55"
                        ZIndex="999">

                        <Border.Shadow>
                            <Shadow
                                Brush="#40000000"
                                Opacity="0.24"
                                Radius="8"
                                Offset="0,4" />
                        </Border.Shadow>

                        <Image
                            HeightRequest="30"
                            HorizontalOptions="Center"
                            Source="trash2_icon.svg"
                            VerticalOptions="Center"
                            WidthRequest="30">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding DeleteNoteCommand}" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Border>
                </HorizontalStackLayout>
                <!--  Note Info Card  -->
                <Border
                    Padding="15"
                    BackgroundColor="{StaticResource White}"
                    HeightRequest="375"
                    Stroke="{StaticResource Charcoal}"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="3">

                    <Border.Shadow>
                        <Shadow
                            Brush="{StaticResource MediumGray}"
                            Opacity="0.3"
                            Radius="8"
                            Offset="2,2" />
                    </Border.Shadow>



                    <!--  Main content - REMOVE AbsoluteLayout properties  -->
                    <VerticalStackLayout Spacing="12">


                        <!--  body  -->
                        <VerticalStackLayout Padding="0,10,0,10">
                            <Label
                                LineBreakMode="WordWrap"
                                Text="{Binding Note.Body}"
                                TextColor="{StaticResource DarkBlue}" />
                        </VerticalStackLayout>



                    </VerticalStackLayout>


                </Border>
            </VerticalStackLayout>
        </ScrollView>



    </Grid>
</ContentPage>