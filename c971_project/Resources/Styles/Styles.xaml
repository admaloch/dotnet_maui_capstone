<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ResourceDictionary.MergedDictionaries>
        <!--  FIXED PATH  -->
        <ResourceDictionary Source="/Resources/Styles/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  ===== NAVIGATION BAR STYLES =====  -->
    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource NavigationBarBackground}" />
        <Setter Property="BarTextColor" Value="{StaticResource NavigationBarText}" />

    </Style>

    <!--  ===== EXISTING STYLES =====  -->
    <!--  Default Label Style  -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource DarkBlue}" />
        <!--  FIXED: Use Color, not Brush  -->
        <Setter Property="FontFamily" Value="Arial" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!--  Field Label (above inputs)  -->
    <Style x:Key="FieldLabel" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="0,12,0,4" />
        <Setter Property="TextColor" Value="{StaticResource DarkBlue}" />
    </Style>

    <!--  Field Border (around inputs)  -->
    <Style x:Key="FieldBorder" TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

    <!--  Field Entry (single-line text)  -->
    <Style x:Key="FieldEntry" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource DarkBlue}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource MediumGray}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!--  Field Editor (multi-line text)  -->
    <Style x:Key="FieldEditor" TargetType="Editor">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource DarkBlue}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource MediumGray}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="AutoSize" Value="TextChanges" />
    </Style>

    <!--  Header Label Style  -->
    <Style x:Key="HeaderLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Cream}" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="BackgroundColor" Value="{StaticResource Charcoal}" />
        <!--  Extend to edges  -->
    </Style>

    <!--  Button Style  -->
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource DarkBlue}" />
        <!--  FIXED  -->
        <Setter Property="TextColor" Value="{StaticResource Cream}" />
        <!--  FIXED  -->
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!--  ContentPage Style  -->
    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource Cream}" />
        <!--  FIXED  -->
        <Setter Property="Padding" Value="20" />
    </Style>

    <!--  Entry Style  -->
    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <!--  FIXED  -->
        <Setter Property="TextColor" Value="{StaticResource DarkBlue}" />
        <!--  FIXED  -->
        <Setter Property="PlaceholderColor" Value="{StaticResource MediumGray}" />
        <!--  FIXED  -->
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="Margin" Value="0,5" />
    </Style>

    <!--  CollectionView/ListView Style  -->
    <Style TargetType="CollectionView">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="SelectionMode" Value="None" />
    </Style>



</ResourceDictionary>